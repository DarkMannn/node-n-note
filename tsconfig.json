{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "types": [
            "node"
        ],
        "lib": [
            "es6"
        ],
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./build",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "downlevelIteration": true,
    }
}
